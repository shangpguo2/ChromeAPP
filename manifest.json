{
    "name": "My Extension",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "bluetooth",
      "activeTab",
      "tabs",
      "management",
      "https://auth.cityu.edu.hk/"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "My Extension"
    },
    "content_scripts": [
        {
          "matches": ["https://auth.cityu.edu.hk/*"],
          "js": ["content.js"]
        }
    ]
  }